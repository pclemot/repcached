+        q_head = q;
+    }
+    q_tail = q;
+    q->next = NULL;
+    pthread_mutex_unlock(&replication_queue_lock);
+}
+
+Q_ITEM *replication_queue_pop(void)
+{
+    Q_ITEM *q;
+
+    pthread_mutex_lock(&replication_queue_lock);
+    q = q_head;
+    if (q != NULL) {
+        q_head = q->next;
+        if (q->next == NULL) {
+            q_tail = NULL;
+        }
+    }
+    pthread_mutex_unlock(&replication_queue_lock);
