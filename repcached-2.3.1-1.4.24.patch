+    print $sock_m "incr num 1\r\n";
+    is(scalar <$sock_m>, "2\r\n", "+ 1 = 2");
+    sync_get_is($sock_m, $sock_b, "num", 2);
+
+    print $sock_m "incr num 8\r\n";
+    is(scalar <$sock_m>, "10\r\n", "+ 8 = 10");
