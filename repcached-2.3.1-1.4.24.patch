+        while(c->wsize < s)
+            c->wsize += 4096;
+        if((p = malloc(c->wsize))){
+            memcpy(p, c->wcurr, c->wbytes);
+            free(c->wbuf);
+            c->wbuf = p;
+            c->wcurr = p;
